{
  "name": "edge-api",
  "description": "Fully-featured, simple to set up, performant and extendable GraphQL server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "check": "tsc --pretty",
    "lint": "nx lint",
    "test": "nx test",
    "test:changed": "nx test --changedSince=develop",
    "test:coverage": "nx test --collectCoverage=true",
    "generate": "graphql-codegen --config codegen.ts"
  },
  "nx": {
    "includedScripts": [
      "dev",
      "check",
      "lint",
      "test:changed",
      "test:coverage",
      "generate"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240405.0"
  }
}
