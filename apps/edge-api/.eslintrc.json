{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["../../.eslintrc.js"],
  "ignorePatterns": [
    "!**/*",
    "codegen.ts",
    "**/*.config.*",
    "**/*.json",
    "**/*.d.ts",
    "**/*.test.ts"
  ],
  "overrides": [
    {
      "files": ["*.{ts,js}"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["apps/edge-api/tsconfig.json"]
      },
      "rules": {}
    }
  ]
}
